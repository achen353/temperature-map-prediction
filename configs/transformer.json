{
    "name": "transformer",
    "seed": {
        "fixed": true,
        "value": 417
    },
    "model": {
        "class": "Transformer",
        "hyperparams": {
            "num_enc_layers": 3,
            "input_size": 256,
            "input_len": 10,
            "pred_len": 3,
            "feature_size": 512,
            "NHEAD": 4,
            "has_pos": true,
            "dropout": 0.1
        }
    },
    "optimizer": {
        "name": "AdamW",
        "lr": 0.001
    },
    "scheduler": {
        "name": "StepLR",
        "hyperparams": {
            "step_size": 100,
            "gamma": 0.99
        }
    },
    "loss": "MSELoss",
    "dataset": {
        "name": "MODISDataset",
        "hyperparams": {
            "patch_dim": 16,
            "input_seq_len": 10,
            "prediction_seq_len": 3,
            "number_training_seq": 80,
            "number_validation_seq": 10,
            "number_test_seq": 10,
            "modis_img_path": "./datasets/MOD11A2"
        }
    },
    "dataloader": {
        "batch_size": 5
    },
    "epoch": 10
}